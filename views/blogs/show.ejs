<%- include('../partials/header') %>

<div class="container">
    <header>
        <h1><%= blog.title %></h1>
    </header>
    <div id="blogPost">
        <div><%= blog.content || "Your story is processing..." %></div>
        <div>Posted by: <%= blog.user._id %> @ <%= blog.createdAt %></div>
        <br>
    </div>
    <% if (user) { %>
        <a id="replyButton" class="btn btn-primary">Reply</a>
    <% } %>
    <div id="replySection">
        <!-- Include existing replies here -->
        <% blog.replies.forEach(reply => { %>
            <div><%= reply.content %> - <%= reply.user %> @ <%= reply.createdAt %></div>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer') %>


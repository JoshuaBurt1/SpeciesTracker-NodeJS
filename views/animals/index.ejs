<%- include('../partials/header') %>
<h1><%= title %></h1>
<p>Welcome to <%= title %></p>

<!--{{#if user}}-->
<a class="btn btn-info" href="/animals/add">Add a new animal</a>
<!--{{/if}}-->
<!--{{! Add links to CRUD operations }}
{{!commented out to not allow viewers to edit/ user can add when editing}}-->

<!--{{! To Show data }}-->
<div class="page-container"> <!-- Line Changed -->
  <div class="table-container"> <!-- Line Changed -->
    <table class="table table-striped table-hover">
      <thead>
        <th>Name</th>
        <th>Last Updated</th>
        <th>Location</th>
        <th>Image / Link</th>
        <!--{{#if ./user}}-->
        <th>Actions</th>
        <!--{{/if}} -->
      </thead>
      <tbody>
        <% dataset.forEach(function(item) { %>
          <tr>
            <td><%= item.name %></td>
            <td id="td2">
              <ul id="cellList"><%= item.updateDate %></ul>
            </td>
            <td id="td5">
              <ul id="cellList"><%= item.location %></ul>
            </td>
            <td class="col-md-3">
              <a href="<%= item.link %>" target="_blank">
                <img class="w-50" src="images/animal_images/<%= item.image %>" />
              </a>
            </td>
            <td id="action">
              <a class="btn btn-primary" href="/animals/edit/<%= item._id %>">Edit</a>
              <a class="btn btn-danger" href="/animals/delete/<%= item._id %>" onclick="return confirmDeletion()">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div> <!-- Line Changed -->
</div> <!-- Line Changed -->
<%- include('../partials/footer') %>
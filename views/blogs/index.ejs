<%- include('../partials/header') %>
<h1 class="display-5"><%= title %></h1>
<div class="mb-3">
    <p class="lead">Discussion board and archive of species related content</p>
<div class="container">
    <div>
        <a class="btn btn-primary" href="/blogs/add">Create Entry</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <% if (user) { %>
                    <th>Actions</th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% blogs.forEach(blog => { %>
                    <tr>
                        <td>
                            <a href="/blogs/<%= blog.id %>"><%= blog.title %></a>
                        </td>
                        <td class="truncated"><%= (blog.content) %></td>
                        <% if (user) { %>
                            <td>
                                <a class="btn btn-primary" href="/blogs/edit/<%= blog._id %>">Edit</a>
                                <a class="btn btn-danger" href="/blogs/delete/<%= blog._id %>" onclick="return confirmDeletion()">Delete</a>
                            </td>
                        <% } %>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %>

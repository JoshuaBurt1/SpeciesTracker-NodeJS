<%- include('../partials/header') %>
<h1><%= title %></h1>
<p>Welcome to <%= title %></p>
  
<!--available to req.body object-->
<div id="editFormOuter">
  <div id="editFormInner">
    <form method="POST">
      <!-- Input names have to match the name of the fields in the mongo schema object -->
      <!-- Mapping is not automatic, but it's best practices -->
      <fieldset class="form-group">
        <label for="name" class="col-2">Name:</label>
        <input name="name" id="name" class="form-control" value="<%= fungus.name %>" />
      </fieldset>
      <fieldset class="form-group">
        <label for="updateDate" class="col-2">Last Update:</label>
        <input name="updateDate" id="updateDate" required type="date" class="form-control" />
        <input name="updateDate" id="updateDate" required type="time" class="form-control" />
      </fieldset>
      <fieldset class="form-group">
        <label for="location" class="col-2">Location:</label>
        <input name="location" id="location" class="form-control" value="<%= fungus.location %>"/>
      </fieldset>
      <fieldset class="form-group">
        <label for="image" class="col-2">Image:</label>
        <input name="image" id="image" class="form-control" value="<%= fungus.image %>"/>
      </fieldset>
      <fieldset class="form-group">
        <label for="link" class="col-2">Link:</label>
        <input name="link" id="link" class="form-control" value="<%= fungus.link %>"/>
      </fieldset>
      <!-- Button needs to be inside <form> element to trigger POST -->
      <button class="offset-3 btn btn-primary">Save</button>
    </form>
  </div>
</div>
<%- include('../partials/footer') %>
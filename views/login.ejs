<%- include('./partials/header') %>  
<h1>
  Login
</h1>

<% if (messages) { %>
  <div class="alert alert-danger">
    Invalid credentials
  </div>
<% } else { %>
  <div class="alert alert-info">
    Please enter your credentials
  </div>
<% } %>

<div id="editFormOuter">
  <div id="editFormInner">
    <form method="post">
      <fieldset class="form-group">
        <label for="username" class="col-2 control-label">
          Username: *
        </label>
        <input name="username" id="username" class="form-control" required />
      </fieldset>
      <fieldset class="form-group" id="loginPassword">
        <label for="password" class="col-2 control-label">
          Password: *
        </label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </fieldset>
      <fieldset class="form-groupR">
        <button class="btn btn-info">
          Login
        </button>
        <a class="btn btn-info" href="/github">Login with Github</a>
      </fieldset>
      <hr>
      <div id="editFormOuter">
        <p class="registerP">Need an account?</p>
        <a href="/register" title="Register">
          Register
        </a>
      </div>
    </form>
  </div>
</div>
<%- include('./partials/footer') %>
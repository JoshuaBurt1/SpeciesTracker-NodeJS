<header>
    <h1>Edit Reply</h1>
</header>
<div>
    <form action="/blogs/editReply/<%= blog._id %>/<%= reply._id %>" method="POST">
        <label for="content" class="col-2">Content:</label>
        <textarea name="content" id="replyEdit" class="form-control" required><%= reply.content %></textarea>

        <button class="offset-3 btn btn-primary">Save</button>
    </form>
</div>

<div class="container">
<title><%= title %></title>
<%- include('../partials/header') %>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

<a class="btn btn-info" href="/plants/add">Add a new plant</a>

<table class="table table-striped table-hover">
  <thead>
    <th>Name</th>
    <th>Last Updated</th>
    <th>Languages</th>
    <th>Hosting</th>
    <th>Status</th>
    <th>Issue</th>
    <th>Image / Link</th>
    <th>Actions</th>
  </thead>
  <tbody>
      <tr>
        <td><%= this.name%></td>
        <td id="td2"><ul id="cellList"><%= this.updateDate%></ul></td>
        <td id="td3"><p id="cellList"><%= this.language%></p></td>
        <td><%= this.host%></td>
        <td><%= this.status%></td>
        <td id="td5">
          <ul id="cellList"><%= this.issue%></ul>
        </td>
        <td class="col-md-3"><a href="<%= this.link%>"" target="_blank">
          <img class="w-50" src="images/<%= this.image%>"/></a></td>

        <td id="action">
          <a class="btn btn-primary" href="/plants/edit/<%= this._id%>">Edit</a>
          <a
            class="btn btn-danger"
            href="/plants/delete/{{this._id}}"
            onclick="return confirmDeletion()"
          >Delete</a>
        </td>
      </tr>
  </tbody>
</table>
<%- include('../partials/footer') %>
</div>